-#  This file is app/views/movies/search_tmdb.html.html.haml  
%h1 The following movies containing '#{@searchTitle}' were found on TMDb

= form_tag movies_add_tmdb_path do
  %table#movies
    %thead
      %tr
        %th Movie Title
        %th Rating
        %th Release Date
        %th Select box
    %tbody
      - @movies.each do |movie|
        %tr
          %td= movie['title']
          %td= movie['rating']
          %td= movie['release_date']
          %td=check_box_tag "tmdb_movies[#{movie[:tmdb_id]}]", nil, nil,:id => "checkbox_"+movie[:tmdb_id].to_s
          

  
  = submit_tag 'Add Selected Movies', :id =>"movies_button"
/= button_to 'Add Selected Movies', {:controller => "movies", :action => "create", :title => movie['title'], :rating => movie['rating'], :description => movie['description'], :release_date => movie['release_date']} , :method=>:post
= link_to 'Return to movie list', movies_path